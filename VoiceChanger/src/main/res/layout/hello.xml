<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background3">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="50dip"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/Hello_present"/>

    <TextView
        android:id="@+id/Hello_TextCaptcha"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="50dip"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/register_captcha"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/Hello_PicCaptcha"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/Hello_EditCaptcha"
        android:layout_height="60dip"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:inputType="text"
        android:visibility="gone"/>

    <Button
        android:id="@+id/Hello_Btn"
        android:layout_height="60dip"
        android:layout_width="match_parent"
        android:layout_marginTop="60dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="@string/btn_hello"
        android:visibility="gone"/>

</LinearLayout>